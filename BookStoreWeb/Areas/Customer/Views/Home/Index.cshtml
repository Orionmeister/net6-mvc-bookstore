@model IEnumerable<Product>

<div class="row" pb-3>
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 4px;">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body">
                            <div class="ps-1 mt-2">
                                <p class="card-title h5 text-black">@product.Title</p>
                                <p class="card-title text-info">by<strong> @product.Author</strong></p>
                            </div>
                            <div class="ps-1 mt-2">
                                <p>List Price: <strike><strong>$@product.ListPrice.ToString("0.00")</strong></strike></p>
                            </div>
                            <div class="ps-1">
                                <p>As low as: <strong>$@product.Price100.ToString("0.00")</strong></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary from-control" asp-route-productId="@product.Id" style="width:100%;">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
